<?xml version="1.0" encoding="utf-8" ?> 

<component name="CategoryRowListPanel" extends="Group" >

	<interface>
		<field id="rowListContent" type="node" onchange="categoryListContentChanged" />
        <field id="focusedContent"  type="node" />
	</interface> 

	<script type="text/brightscript"  uri="pkg:/components/CategoryRowListPanel/CategoryRowListPanel.brs"/>

	<children>
		<Video id="video"
			enableUI = "true"
			translation = "[0,0]"
		/>	
		
		<LayoutGroup id="rowGroup">
			<Rectangle id="overlayBG" color="0x00000040" height="70" focusable = "false" >
		    	<LayoutGroup id="overlayContent" layoutDirection="horizontal" vertAlignment="center" itemSpacings="20" >
			        <Poster id="hangoverImage" loadSync="true" uri="pkg:/images/Overhang_BackgroundSlice_SD.png" />
			        <Label id="hangoverText" font="font:LargeBoldSystemFont" text="MY ROKU CHANNEL" color="0xDDDDDDFF"/>
	            </LayoutGroup>
			</Rectangle>

			<RowList id="categoryRowList"
					 itemComponentName = "CustomCategoryItem"
					 numRows = "1"
					 rowItemSpacing = "[ [20, 20] ]"	
					 rowLabelOffset = "[ [0, 20] ]"				 
					 focusXOffset = "0"
					 showRowLabel   = "true"
					 showRowCounter = "true"
					 itemSize = "[ 1880, 500 ]"	
					 rowItemSize = "[ [350, 400] ]"				 
					 rowFocusAnimationStyle = "fixedFocusWrap"/>
					 
			<Rectangle
				id = "BottomBar"
				translation = "[0,1080]"
				width = "1920"
				height = "400"
				color = "0x000000AA"
				opacity = "0.7">
				<RowList id="videoRowList"
						 itemComponentName = "CustomVideoItem"					 
						 numRows = "1"
						 rowItemSpacing = "[ [20, 20] ]"	
						 rowLabelOffset = "[ [0, 20] ]"				 
						 focusXOffset = "0"
						 showRowLabel   = "true"
						 showRowCounter = "true"
						 itemSize = "[ 1880, 350 ]"	
						 rowItemSize = "[ [250, 300] ]" 					 				 
						 rowFocusAnimationStyle = "fixedFocusWrap"/>
			</Rectangle>	
		</LayoutGroup>
		
		<Label
			id = "Hint"
			color = "FF0000FF"
			height = "50"
			text = "Press UP/DOWN for Channels"
			font = "font:SmallBoldSystemFont"
			translation = "[1400,50]"
		/>
		
	</children>

</component>
